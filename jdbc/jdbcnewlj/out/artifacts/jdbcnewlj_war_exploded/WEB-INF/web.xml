<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>swu.lj.AddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/admin/inserts</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ListbookServlet</servlet-name>
        <servlet-class>swu.lj.ListBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListbookServlet</servlet-name>
        <url-pattern>/admin/listbook</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>deleteBookServlet</servlet-name>
        <servlet-class>swu.lj.DeleteBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteBookServlet</servlet-name>
        <url-pattern>/admin/deletebook</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UpdataBookServlet</servlet-name>
        <servlet-class>swu.lj.UpdataBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdataBookServlet</servlet-name>
        <url-pattern>/admin/updateBook</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>upsql</servlet-name>
        <servlet-class>swu.lj.Updatasql</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upsql</servlet-name>
        <url-pattern>/admin/upsql</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>swu.lj.searchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/index2.html</url-pattern>
    </servlet-mapping>


</web-app>